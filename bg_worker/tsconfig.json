{
    "display": "Node 14",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],

        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false
    },
    "include": ["src/**/*", "test/test.ts", "src/modules/ethers.ts"]
}