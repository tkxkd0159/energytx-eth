<header class="major">
    <h1>Register an energy supply contract</h1>
  </header>
<div class="row gtr-200">
    <div class="col-8 col-12-medium">

  <form action="http://127.0.0.1:3000/register" method="post">
    <div class="row gtr-uniform">
        <div class="col-12">
            <label for="from_">Your Address:</label>
            <input type="text" name="from_" id="from_"
            placeholder="Please enter your address" required>
        </div>
        <div class="col-12">
            <label for="start_">Start time:</label>
            <input type="text" name="start_" id="start_"
            placeholder="Enter start time to provide power(yyyymmddhhmm)" required>
        </div>
        <div class="col-12">
            <label for="Period">Supply time:</label>
            <input type="text" name="Period" id="Period"
            placeholder="How many minutes will power be supplied from the start time?" required>
        </div>
        <div class="col-12">
            <label for="Power">Power to provide:</label>
            <input type="text" name="Power" id="Power"
            placeholder="Amount of energy to supply" required>
        </div>
        <div class="col-12">
            <label for="value_">Price:</label>
            <input type="text" name="Price" id="Price"
            placeholder="Price per Watt (ETT)" required>
        </div>
        <div class="col-12">
            <button type="submit" class="button primary icon solid fa-angle-double-right">
                Send
            </button>
        </div>
    </div>
</form>
</div>

</div>